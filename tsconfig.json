{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2017",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "chrome",
      "react",
      "react-dom",
      "node"
    ],
    "isolatedModules": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}